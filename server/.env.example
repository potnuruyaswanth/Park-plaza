# Environment Variables
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/parkplaza?retryWrites=true&w=majority

# JWT
JWT_ACCESS_SECRET=your_access_token_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here_min_32_chars
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@parkplaza.com

# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_ENABLED=false

# App Settings
APP_URL=http://localhost:5000
CLIENT_URL=http://localhost:5173
